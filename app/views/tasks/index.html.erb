<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<h3><%= link_to "Create new task", new_task_path %></h3>
<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <h3><%= task.completed %></h3>
  <%= link_to "Show Task", task_path(task) %>
  <%= link_to "Edit Task", edit_task_path(task) %>
  <%= link_to "Delete Task?", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?"} %>
<% end %>
